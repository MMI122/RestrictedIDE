{
  "version": "1.0.0",
  "name": "Default Restrictive Policy (macOS)",
  "description": "Default security policy for Restricted IDE on Mac",
  
  "urls": {
    "mode": "whitelist",
    "patterns": [
      "https://developer.mozilla.org/*",
      "https://docs.python.org/*",
      "https://cplusplus.com/*",
      "https://www.w3schools.com/*",
      "https://docs.oracle.com/javase/*",
      "https://learn.microsoft.com/en-us/dotnet/*",
      "https://devdocs.io/*"
    ]
  },
  
  "keyboard": {
    "mode": "blacklist",
    "blocked": [
      { "keys": ["cmd", "tab"], "reason": "Window switching disabled" },
      { "keys": ["cmd", "q"], "reason": "Quit application disabled" },
      { "keys": ["cmd", "w"], "reason": "Close window disabled" },
      { "keys": ["cmd", "space"], "reason": "Spotlight search disabled" },
      { "keys": ["cmd", "option", "escape"], "reason": "Force Quit disabled" },
      { "keys": ["cmd", "h"], "reason": "Hide window disabled" },
      { "keys": ["cmd", "m"], "reason": "Minimize window disabled" },
      { "keys": ["cmd", "comma"], "reason": "Preferences disabled" },
      { "keys": ["control", "up"], "reason": "Mission Control disabled" },
      { "keys": ["control", "down"], "reason": "App Expose disabled" },
      { "keys": ["control", "left"], "reason": "Space switching disabled" },
      { "keys": ["control", "right"], "reason": "Space switching disabled" },
      { "keys": ["cmd", "option", "i"], "reason": "DevTools disabled" },
      { "keys": ["f12"], "reason": "DevTools disabled" }
    ]
  },
  
  "processes": {
    "mode": "whitelist",
    "allowed": [
      "restricted-ide",
      "electron",
      "node"
    ],
    "blocked": [
      "terminal",
      "iterm",
      "activity monitor",
      "console",
      "finder",
      "system settings",
      "textedit",
      "notes",
      "calculator",
      "safari",
      "google chrome",
      "firefox",
      "opera",
      "discord",
      "slack"
    ]
  },
  
  "fileAccess": {
    "mode": "sandbox",
    "sandboxPath": "~/Library/Application Support/RestrictedIDE/sandbox",
    "allowedExtensions": [
      ".txt", ".md", ".json",
      ".js", ".ts", ".jsx", ".tsx",
      ".py", ".pyw",
      ".java", ".class",
      ".c", ".cpp", ".h", ".hpp",
      ".cs",
      ".html", ".htm", ".css", ".scss", ".sass",
      ".xml", ".yaml", ".yml",
      ".sql",
      ".sh", ".bash", ".zsh"
    ],
    "maxFileSize": 10485760,
    "deniedPaths": [
      "/System",
      "/Library",
      "/Applications",
      "/Users",
      "/bin",
      "/usr/bin",
      "/sbin",
      "/etc"
    ]
  },
  
  "time": {
    "enabled": false,
    "schedule": {
      "startTime": "08:00",
      "endTime": "22:00",
      "days": [1, 2, 3, 4, 5],
      "timezone": "local"
    }
  },
  
  "admin": {
    "secretKeyCombo": ["cmd", "shift", "option", "a"],
    "sessionTimeout": 300000,
    "maxLoginAttempts": 3,
    "lockoutDuration": 300000
  }
}